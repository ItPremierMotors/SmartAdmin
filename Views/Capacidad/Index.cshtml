@{
    ViewData["Title"] = "Capacidad del Taller";
}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0"><i class="fas fa-calendar-alt me-2"></i>@ViewData["Title"]</h1>
        <div class="d-flex align-items-center gap-3">
            <div class="d-flex align-items-center gap-2">
                <label class="form-label mb-0 text-muted small text-nowrap">Sucursal:</label>
                <select class="form-select form-select-sm" id="filtroSucursal" style="width:200px">
                    <option value="">Cargando...</option>
                </select>
            </div>
            <button class="btn btn-primary" onclick="abrirGenerarSemana()">
                <i class="fas fa-bolt me-1"></i> Generar Semana
            </button>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div id="loading" class="text-center py-4">
                <div class="spinner-border text-primary"></div>
                <p class="mt-2 text-muted">Cargando calendario...</p>
            </div>
            <div id="calendario"></div>
        </div>
    </div>
</div>

@section Scripts {
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.9/index.global.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.9/index.global.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.9/locales/es.global.min.js"></script>

<style>
    .fc-event { cursor: pointer; }
    .capacidad-event { border-radius: 6px !important; padding: 4px 6px !important; font-size: 0.8rem; }
    .ocupacion-baja { background-color: #198754 !important; border-color: #198754 !important; }
    .ocupacion-media { background-color: #ffc107 !important; border-color: #ffc107 !important; color: #000 !important; }
    .ocupacion-alta { background-color: #fd7e14 !important; border-color: #fd7e14 !important; }
    .ocupacion-llena { background-color: #dc3545 !important; border-color: #dc3545 !important; }
    .bloqueado { background-color: #6c757d !important; border-color: #6c757d !important; }
</style>

<script>
    const URLS = {
        getRango: '@Url.Action("GetByRangoFechas", "Capacidad")',
        detalleDia: '@Url.Action("DetalleDiaPartial", "Capacidad")',
        generarSemana: '@Url.Action("GenerarSemanaPartial", "Capacidad")',
        generarBloques: '@Url.Action("GenerarBloquesPartial", "Capacidad")',
        postGenerarSemana: '@Url.Action("GenerarSemana", "Capacidad")',
        postGenerarBloques: '@Url.Action("GenerarBloques", "Capacidad")',
        postCreate: '@Url.Action("Create", "Capacidad")',
        postUpdate: '@Url.Action("Update", "Capacidad")',
        postBloquear: '@Url.Action("BloquearDia", "Capacidad")',
        postDesbloquear: '@Url.Action("DesbloquearDia", "Capacidad")',
        editPartial: '@Url.Action("EditPartial", "Capacidad")',
        postCreateBloque: '@Url.Action("CreateBloque", "Capacidad")',
        postUpdateBloque: '@Url.Action("UpdateBloque", "Capacidad")',
        postDeleteBloque: '@Url.Action("DeleteBloque", "Capacidad")',
        getSucursales: '@Url.Action("GetSucursales", "Capacidad")'
    };
</script>
<script src="~/JS/pages/capacidad.js"></script>
}
