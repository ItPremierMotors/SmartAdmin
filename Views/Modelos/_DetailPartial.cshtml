@model SmartAdmin.Models.Catalogo.Modelo.ModeloViewModel

<div class="container-fluid">
    <div class="row g-3">
        <!-- Imagen del modelo -->
        <div class="col-md-5">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex align-items-center justify-content-center p-4">
                    @if (!string.IsNullOrWhiteSpace(Model.ImagenUrl))
                    {
                        <img src="@Model.ImagenUrl"
                             class="img-fluid rounded"
                             style="max-height: 200px; object-fit: cover;"
                             alt="@Model.Nombre" />
                    }
                    else
                    {
                        <div class="text-center text-muted">
                            <i class="fas fa-car fa-4x mb-3"></i>
                            <div class="fs-6">Sin imagen disponible</div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Información principal -->
        <div class="col-md-7">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h5 class="mb-0">
                            <i class="fas fa-car text-primary me-2"></i>@Model.Nombre
                        </h5>
                        @if (Model.EstaEnProduccion)
                        {
                            <span class="badge bg-success">
                                <i class="fas fa-check-circle me-1"></i>En producción
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">
                                <i class="fas fa-stop-circle me-1"></i>Descontinuado
                            </span>
                        }
                    </div>

                    <div class="row g-2">
                        <div class="col-6">
                            <div class="p-2 border rounded bg-light">
                                <small class="text-muted d-block">Código</small>
                                <span class="badge bg-secondary">@Model.Codigo</span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-2 border rounded bg-light">
                                <small class="text-muted d-block">Marca</small>
                                <strong>@(Model.MarcaNombre ?? "N/A")</strong>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-2 border rounded bg-light">
                                <small class="text-muted d-block">Segmento</small>
                                <span class="badge bg-primary">@Model.Segmento</span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-2 border rounded bg-light">
                                <small class="text-muted d-block">Período</small>
                                <strong>
                                    @(Model.AnioInicio?.ToString() ?? "?") -
                                    @(Model.AnioFin?.ToString() ?? "Actual")
                                </strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Descripción -->
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle text-info me-2"></i>Descripción
                    </h6>
                </div>
                <div class="card-body">
                    <p class="mb-0">
                        @if (!string.IsNullOrWhiteSpace(Model.Descripcion))
                        {
                            @Model.Descripcion
                        }
                        else
                        {
                            <span class="text-muted fst-italic">Sin descripción registrada</span>
                        }
                    </p>
                </div>
            </div>
        </div>

        <!-- Información adicional -->
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="fas fa-chart-bar text-success me-2"></i>Información Adicional
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-2">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-calendar-alt text-primary me-2"></i>
                                <div>
                                    <small class="text-muted d-block">Año de Inicio</small>
                                    <strong>@(Model.AnioInicio?.ToString() ?? "No especificado")</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-2">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-calendar-times text-danger me-2"></i>
                                <div>
                                    <small class="text-muted d-block">Año de Fin</small>
                                    <strong>@(Model.AnioFin?.ToString() ?? "En producción")</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-2">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-hourglass-half text-warning me-2"></i>
                                <div>
                                    <small class="text-muted d-block">Años de producción</small>
                                    <strong>
                                        @if (Model.AnioInicio.HasValue)
                                        {
                                            var anios = (Model.AnioFin ?? DateTime.Now.Year) - Model.AnioInicio.Value;
                                            @($"{anios} años")
                                        }
                                        else
                                        {
                                            @("No especificado")
                                        }
                                    </strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Botón cerrar -->
        <div class="col-12 d-flex justify-content-end mt-2">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                <i class="fas fa-times me-1"></i> Cerrar
            </button>
        </div>
    </div>
</div>
