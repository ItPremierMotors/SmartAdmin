<div class="d-flex justify-content-between align-items-center mb-3">
    <h6 class="mb-0">Tecnicos Asignados</h6>
    <button class="btn btn-primary btn-sm" id="btnAsignarTecnico" onclick="abrirAsignarTecnico()">
        <i class="fas fa-plus me-1"></i> Asignar Tecnico
    </button>
</div>

<div id="loadingTecnicos" class="text-center py-3 d-none">
    <div class="spinner-border spinner-border-sm text-primary"></div>
    <span class="ms-2 text-muted">Cargando asignaciones...</span>
</div>

<div id="sinTecnicos" class="text-center py-4 d-none">
    <i class="fas fa-hard-hat fa-2x text-muted mb-2"></i>
    <p class="text-muted mb-0">No hay tecnicos asignados</p>
</div>

<div class="table-responsive">
    <table class="table table-hover table-sm mb-0 d-none" id="tablaTecnicos">
        <thead class="table-light">
            <tr>
                <th>Tecnico</th>
                <th>Codigo</th>
                <th>Servicio</th>
                <th class="text-center">Estado</th>
                <th>Asignado</th>
                <th>Tiempo</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody id="tecnicosBody"></tbody>
    </table>
</div>
