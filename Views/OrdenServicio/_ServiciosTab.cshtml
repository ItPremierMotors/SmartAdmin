<div class="d-flex justify-content-between align-items-center mb-3">
    <h6 class="mb-0">Servicios de la Orden</h6>
    <button class="btn btn-primary btn-sm" id="btnAgregarServicio" onclick="abrirAgregarServicio()">
        <i class="fas fa-plus me-1"></i> Agregar Servicio
    </button>
</div>

<div id="loadingServicios" class="text-center py-3 d-none">
    <div class="spinner-border spinner-border-sm text-primary"></div>
    <span class="ms-2 text-muted">Cargando servicios...</span>
</div>

<div id="sinServicios" class="text-center py-4 d-none">
    <i class="fas fa-tools fa-2x text-muted mb-2"></i>
    <p class="text-muted mb-0">No hay servicios registrados</p>
</div>

<div class="table-responsive">
    <table class="table table-hover table-sm mb-0 d-none" id="tablaServicios">
        <thead class="table-light">
            <tr>
                <th>Servicio</th>
                <th>Descripcion</th>
                <th>Tecnico</th>
                <th class="text-center">Estado</th>
                <th class="text-end">Precio</th>
                <th class="text-center">Cant.</th>
                <th class="text-end">Subtotal</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody id="serviciosBody"></tbody>
    </table>
</div>
