@* SmartAdmin/Views/Users/_EditPartial.cshtml *@
@model SmartAdmin.Models.UserRole.UserViewModels.UserViewModel
@{
    var rolesDisponibles = ViewBag.RolesDisponibles as List<SmartAdmin.Models.UserRole.RoleViewModels.RoleViewModel> ?? new List<SmartAdmin.Models.UserRole.RoleViewModels.RoleViewModel>();
    var cargosDisponibles = ViewBag.CargosDisponibles as List<string> ?? new List<string>();
}

<form id="formEditar">
    <input type="hidden" id="txtId" value="@Model.Id">

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" disabled />
            <input type="hidden" asp-for="Email" />
            <small class="text-muted">El email no se puede modificar</small>
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Nombre Completo <span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="txtNombre" value="@Model.NombreCompleto" required>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <select class="form-select" id="txtCargo">
                <option value="">Seleccione un cargo</option>
                @foreach (var cargo in cargosDisponibles)
                {
                    @if (Model.Cargo == cargo)
                    {
                        <option value="@cargo" selected>@cargo</option>
                    }
                    else
                    {
                        <option value="@cargo">@cargo</option>
                    }
                }
            </select>
            <small class="text-muted">O escriba uno nuevo abajo</small>
            <input type="text" class="form-control mt-2" id="txtCargoNuevo" placeholder="Nuevo cargo (opcional)">
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Estado</label>
            <div class="form-check form-switch mt-2">
                <input class="form-check-input" type="checkbox" id="chkActivo" @(Model.Activo ? "checked" : "")>
                <label class="form-check-label" for="chkActivo">Usuario Activo</label>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Roles</label>
        <div class="border rounded p-3">
            @if (rolesDisponibles.Any())
            {
                @foreach (var rol in rolesDisponibles)
                {
                    var isChecked = Model.Roles != null && Model.Roles.Contains(rol.Name);
                    var badgeColor = rol.Name == "AdminTI" ? "danger" : (rol.Name == "Gerencia" ? "info" : "secondary");
                    <div class="form-check form-check-inline">
                        <input class="form-check-input role-checkbox" type="checkbox"
                               id="chkRole_@rol.Name" value="@rol.Name" @(isChecked ? "checked" : "")>
                        <label class="form-check-label" for="chkRole_@rol.Name">
                            <span class="badge bg-@badgeColor">@rol.Name</span>
                        </label>
                    </div>
                }
            }
            else
            {
                <div class="text-muted fst-italic">
                    <i class="fas fa-info-circle me-1"></i>
                    No hay roles disponibles para asignar.
                </div>
            }
        </div>
    </div>
</form>

<div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
    <button class="btn btn-primary" onclick="actualizarUsuario()">
        <i class="fas fa-save me-2"></i>Actualizar
    </button>
</div>