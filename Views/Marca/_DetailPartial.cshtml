@model SmartAdmin.Models.Catalogo.Marca.MarcaViewModel
<div class="container-fluid">
    <div class="row g-3">
        <!-- Logo -->
        <div class="col-md-4 text-center">
            <div class="card h-100">
                <div class="card-body d-flex align-items-center justify-content-center">
                    @if (!string.IsNullOrWhiteSpace(Model.LogoUrl))
                    {
                        <img src="@Model.LogoUrl"
                             class="img-fluid"
                             style="max-height: 140px;"
                             alt="@Model.Nombre" />
                    }
                    else
                    {
                        <div class="text-muted">
                            <i class="fas fa-image fa-3x mb-2"></i>
                            <div>Sin logo</div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- Información principal -->
        <div class="col-md-8">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="mb-3">@Model.Nombre</h5>
                    <div class="row mb-2">
                        <div class="col-5 text-muted">Código</div>
                        <div class="col-7 fw-semibold">@Model.Codigo</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-5 text-muted">País de origen</div>
                        <div class="col-7">
                            @(string.IsNullOrWhiteSpace(Model.PaisOrigen) ? "N/A" : Model.PaisOrigen)
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-5 text-muted">Marca propia</div>
                        <div class="col-7">
                            @if (Model.EsMarcaPropia)
                            {
                                <span class="badge bg-success">Sí</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Observaciones -->
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted mb-2">Observaciones</h6>
                    <p class="mb-0">
                        @(!string.IsNullOrWhiteSpace(Model.Observaciones)
                                                ? Model.Observaciones
                                                : "Sin observaciones registradas")
                    </p>
                </div>
            </div>
        </div>
        <!-- Botón al final, separado de los cards -->
        <div class="col-12 d-flex justify-content-end mt-2">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                <i class="fas fa-times me-1"></i> Cerrar
            </button>
        </div>
    </div>
</div>