@model SmartAdmin.Models.Catalogo.EstadoOs.EstadoOsViewModel

<div class="row g-3">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-primary text-white py-2">
                <h6 class="mb-0"><i class="fas fa-stream me-2"></i>Información del Estado</h6>
            </div>
            <div class="card-body">
                <table class="table table-sm table-borderless mb-0">
                    <tr>
                        <td class="text-muted" style="width:40%">Orden Secuencial:</td>
                        <td><span class="badge bg-dark">@Model.OrdenSecuencial</span></td>
                    </tr>
                    <tr>
                        <td class="text-muted">Código:</td>
                        <td><code>@Model.Codigo</code></td>
                    </tr>
                    <tr>
                        <td class="text-muted">Nombre:</td>
                        <td><strong>@Model.Nombre</strong></td>
                    </tr>
                    <tr>
                        <td class="text-muted">Descripción:</td>
                        <td>@(Model.Descripcion ?? "Sin descripción")</td>
                    </tr>
                    <tr>
                        <td class="text-muted">Es Estado Final:</td>
                        <td>
                            @if (Model.EsEstadoFinal)
                            {
                                <span class="badge bg-danger"><i class="fas fa-flag-checkered"></i> Sí</span>
                            }
                            else
                            {
                                <span class="badge bg-success"><i class="fas fa-play"></i> No</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td class="text-muted">Permite Modificación:</td>
                        <td>
                            @if (Model.PermiteModificacion)
                            {
                                <span class="badge bg-success"><i class="fas fa-check"></i> Sí</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary"><i class="fas fa-lock"></i> No</span>
                            }
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-end mt-3 pt-3 border-top">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
        <i class="fas fa-times me-1"></i> Cerrar
    </button>
</div>
